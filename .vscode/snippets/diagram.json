{
	"C4_Person": {
		"prefix": "Person",
		"body": [
			"Person(${1:alias}, \"${2:label}\")",
			"$0"
		],
		"description": "Add Person to C4 diagram"
	},
	"C4_Person_Descr": {
		"prefix": "Person with Description",
		"body": [
			"Person(${1:alias}, \"${2:label}\", \"${3:description}\")",
			"$0"
		],
		"description": "Add Person with Description to C4 diagram"
	},

	"C4_Container": {
